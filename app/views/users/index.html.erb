<h1>All users</h1>

<% if current_user.present? %>
  <p>現在ログインしているユーザー:<%= current_user.email %></p>
  <%= link_to 'Sign_out', destroy_user_session_path, method: :delete %>
<% else %>
   <%= link_to 'Sign_in', new_user_session_path %>
<% end %>

<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= link_to user.email, user %>
    </li>
  <% end %>
</ul>